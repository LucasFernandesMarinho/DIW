<!DOCTYPE html>
<html>
<head>
    <style>
        .payment-option {
            display: none;
        }
    </style>
    <script>
        function showPaymentOption(option) {
            var options = ['credit', 'debit', 'pix'];
            options.forEach(function(opt) {
                document.getElementById(opt).style.display = opt === option ? 'block' : 'none';
            });
        }
    </script>
</head>
<body>
    <button onclick="showPaymentOption('credit')">Crédito</button>
    <button onclick="showPaymentOption('debit')">Débito</button>
    <button onclick="showPaymentOption('pix')">Pix</button>

    <div id="credit" class="payment-option">
        <h2>Crédito</h2>
        <label>CPF: <input type="text"></label><br>
        <label>Número do cartão: <input type="text"></label><br>
        <label>Nome no cartão: <input type="text"></label><br>
        <label>CVC: <input type="text"></label><br>
        <label>Validade: <input type="text"></label><br>
    </div>

    <div id="debit" class="payment-option">
        <h2>Débito</h2>
        <label>CPF: <input type="text"></label><br>
        <label>Número do cartão: <input type="text"></label><br>
        <label>Nome no cartão: <input type="text"></label><br>
        <label>CVC: <input type="text"></label><br>
        <label>Validade: <input type="text"></label><br>
    </div>

    <div id="pix" class="payment-option">
        <h2>Pix</h2>
        <label>CPF: <input type="text"></label><br>
    </div>
</body>
</html>
